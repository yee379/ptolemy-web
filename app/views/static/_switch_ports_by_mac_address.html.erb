<li class="span4">
  <h3>
    Mac Address
  </h3>
  <p>
    What switch is a mac address is connected to
    <form class="form-search span12" method="get" action="<%= hosts_path %>" autocomplete="off">
      <div class="input-append">
        <input id="switch_ports_by_mac_address_autocomplete" class="ajax-typeahead span9 input-medium search-query" name="q" placeholder="MAC Address..." type="text" autocomplete="off">
        <button class="btn add-on">
          <i class="icon-search"></i>
        </button>
      </div>
    </form>
  </p>
</li>

<script>
  $('#switch_ports_by_mac_address_autocomplete').typeahead({
    source: function( q, process ){
      $.get( "<%= autocomplete_mac_address_list_path %>", { query: q }, function(d){
        return process( d )
      })
    }
  });
</script>
<li class="span4">
  <h3>
    <%= image_tag "pulse1.svg" %>Switch Status
  </h3>
  <p>
    Provides status graphs of network switch
    <form id="switch_status" class="form-search span12" autocomplete="off">
      <div class="input-append">
        <input id="device_autocomplete" class="ajax-typeahead span9 input-medium search-query" name="device" placeholder="switch name..." type="text" autocomplete="off">
        <button class="btn add-on">
          <i class="icon-search"></i>
        </button>
      </div>
    </form>
  </p>
</li>


<script>
  $('#switch_status').submit( function(e){
    e.preventDefault();
    // var field = $(this).find('input#device_autocomplete').val();
    // console.log( field );
    $(this).attr('action',  "/performance/device" );
    $(this).unbind('submit').submit()
  });
  $('#device_autocomplete').typeahead({
    source: function( q, process ){
      $.get( "<%= autocomplete_device_list_path %>", { query: q }, function(d){
        return process( d )
      })
    }
  });
</script>